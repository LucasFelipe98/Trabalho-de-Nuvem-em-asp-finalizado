@model TesteAdocao.Models.Animal

@{
    ViewBag.Title = "Delete";
}

<h2>Deletar</h2>

<h3>Tem certeza que deseja deletar este animal?</h3>
<div class="panel panel-info">
    <div class="panel-heading">
        <label>Nome: </label>
        <h3 class="panel-title">@Html.DisplayFor(model => model.AnimalNome)</h3>
    </div>
    <div class="panel-body">
        <label>Imagem: </label>
        <img src="~/ImgAnimais/@Html.DisplayFor(model => model.AnimalImagem)" style="width: 150px; margin-left: 150px" />
    </div>
    <div class="panel-body">
        <label>Descrição: </label>
        @Html.DisplayFor(model => model.AnimalDescricao)
    </div>
    <div class="panel-body">
        <label>Cor: </label>
        @Html.DisplayFor(model => model.AnimalCor)
    </div>

    <div class="panel-body">
        <label>Preço: </label>
        @Html.DisplayFor(model => model.AnimalRaca)
    </div>
    <div class="panel-body">
        <label>Categoria: </label>
        @Html.DisplayFor(model => model.Categoria.CategoriaNome)
    </div>

</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Voltar a Lista", "Index", null, new { @class = "btn btn-primary" })
    </div>
}

